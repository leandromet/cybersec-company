# Development Dockerfile for Next.js Frontend
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json ./
COPY yarn.lock* ./

# Install dependencies (will create yarn.lock if it doesn't exist)
RUN yarn install

# Copy source code
COPY . .
# Set the port for Next.js
ENV PORT=3000
EXPOSE 3000

# Start in development mode with hot reload
CMD ["yarn", "dev"]
