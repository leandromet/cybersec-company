# Vernon Cyber Security Solutions - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Password
# Generate a strong password for production
DB_PASSWORD=secure_db_password_2024_change_me

# Database URL (automatically constructed from above)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://cybersec_user:${DB_PASSWORD}@postgres:5455/cybersec_db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret Key
# Generate a secure random string for production
# Use: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long

# Session Secret for Redis
SESSION_SECRET=another_secure_session_secret_key

# Password hashing rounds (bcrypt)
BCRYPT_ROUNDS=12

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Application Ports
BACKEND_PORT=5001
FRONTEND_PORT=5000

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:5001

# =============================================================================
# COMPANY INFORMATION
# =============================================================================

# Company Details
COMPANY_NAME=Vernon Cyber Security Solutions
NEXT_PUBLIC_COMPANY_NAME=Vernon Cyber Security Solutions
COMPANY_EMAIL=info@vernoncybersec.ca
COMPANY_PHONE=+1-250-555-0123
COMPANY_ADDRESS=3200 32nd Ave, Vernon, BC V1T 2M8

# Website URLs
FRONTEND_URL=http://localhost:5000
BACKEND_URL=http://localhost:5001

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Email addresses
FROM_EMAIL=noreply@vernoncybersec.ca
CONTACT_EMAIL=info@vernoncybersec.ca
SUPPORT_EMAIL=support@vernoncybersec.ca

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection for session management
REDIS_HOST=redis
REDIS_PORT=6389
REDIS_PASSWORD=
REDIS_DB=0

# Session configuration
SESSION_TIMEOUT=86400

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,https://vernoncybersec.ca

# Security Headers
SECURITY_HEADERS_ENABLED=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg

# Upload directory
UPLOAD_DIR=./uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# Enable request logging
REQUEST_LOGGING=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google reCAPTCHA (for forms)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Stripe (for payments - optional)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (error tracking - optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Application insights
ENABLE_METRICS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate paths (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Force HTTPS in production
FORCE_HTTPS=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Seed database on startup
SEED_DATABASE=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn
# FORCE_HTTPS=true
# CORS_ORIGINS=https://vernoncybersec.ca
